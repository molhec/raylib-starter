{
  "version": 4,
  "configurations": [
    {
      "name": "WSL/Linux",
      "compilerPath": "/usr/bin/g++",
      "intelliSenseMode": "linux-gcc-x64",
      "cppStandard": "c++17",
      "cStandard": "c17",
      "compileCommands": "${workspaceFolder}/compile_commands.json",
      // Fallbacks if compile_commands isn't present yet:
      "includePath": [
        "${workspaceFolder}",
        "${workspaceFolder}/lib",
        "${env:HOME}/raylib/src"
      ],
      "defines": ["PLATFORM_DESKTOP", "_DEFAULT_SOURCE"]
    },
    {
      "name": "macOS",
      "compilerPath": "/usr/bin/clang++",
      "intelliSenseMode": "macos-clang-arm64", // use x64 on Intel Macs
      "cppStandard": "c++17",
      "cStandard": "c17",
      "compileCommands": "${workspaceFolder}/compile_commands.json",
      "includePath": [
        "${workspaceFolder}",
        "${workspaceFolder}/lib",
        "/opt/homebrew/include",
        "/usr/local/include"
      ],
      "defines": ["PLATFORM_DESKTOP", "_DEFAULT_SOURCE"]
    }
  ]
}
