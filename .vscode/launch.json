{
  "version": "0.2.0",
  "configurations": [
    // ---- WSL / Linux (gdb) ----
    {
      "name": "Run game (WSL/Linux, gdb)",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/game",
      "cwd": "${workspaceFolder}",
      "args": [],
      "stopAtEntry": false,
      "console": "integratedTerminal",
      "externalConsole": false,
      "preLaunchTask": "build:debug",
      "MIMode": "gdb",
      "miDebuggerPath": "/usr/bin/gdb",
      "setupCommands": [{ "text": "-enable-pretty-printing" }],
      "environment": [
        { "name": "DISPLAY", "value": "${env:DISPLAY}" },
        { "name": "WAYLAND_DISPLAY", "value": "${env:WAYLAND_DISPLAY}" },
        { "name": "LIBGL_ALWAYS_INDIRECT", "value": "${env:LIBGL_ALWAYS_INDIRECT}" }
      ]
    },

    // ---- macOS (lldb) ----
    {
      "name": "Run game (macOS, lldb)",
      "type": "lldb",
      "request": "launch",
      "program": "${workspaceFolder}/game",
      "cwd": "${workspaceFolder}",
      "args": [],
      "stopAtEntry": false,
      "console": "integratedTerminal",
      "externalConsole": false,
      "preLaunchTask": "build:debug:mac"
    },

    // ---- Windows native (optional; only if you ever build a .exe) ----
    {
      "name": "Run game (Windows .exe, gdb)",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/game.exe",
      "cwd": "${workspaceFolder}",
      "args": [],
      "stopAtEntry": false,
      "externalConsole": true,
      "preLaunchTask": "build:debug:win",
      "MIMode": "gdb",
      "miDebuggerPath": "C:/msys64/mingw64/bin/gdb.exe"
    }
  ]
}
